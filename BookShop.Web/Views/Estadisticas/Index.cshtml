@model BookShop.Web.Models.EstadisticasViewModel
@{
    ViewData["Title"] = "Estadísticas";
}

<div class="row mb-3">
    <div class="col-12">
        <h2><i class="bi bi-graph-up"></i> Panel de Estadísticas</h2>
        <p class="lead">Resumen general del sistema de gestión de librería</p>
    </div>
</div>

<!-- Métricas Principales -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body text-center">
                <i class="bi bi-currency-dollar display-4"></i>
                <h4 class="card-title">Ventas del Día</h4>
                <h2 class="mb-0">$@Model.TotalVentasDia.ToString("N2")</h2>
                <small>@Model.Fecha.ToString("dd/MM/yyyy")</small>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body text-center">
                <i class="bi bi-book display-4"></i>
                <h4 class="card-title">Libros Vendidos</h4>
                <h2 class="mb-0">@Model.CantidadLibrosVendidos</h2>
                <small>Hoy</small>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body text-center">
                <i class="bi bi-calendar-month display-4"></i>
                <h4 class="card-title">Ventas del Mes</h4>
                <h2 class="mb-0">$@Model.TotalVentasMes.ToString("N2")</h2>
                <small>@DateTime.Now.ToString("MMMM yyyy")</small>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body text-center">
                <i class="bi bi-exclamation-triangle display-4"></i>
                <h4 class="card-title">Stock Bajo</h4>
                <h2 class="mb-0">@Model.LibrosStockBajo</h2>
                <small>Requieren atención</small>
            </div>
        </div>
    </div>
</div>

<!-- Información del Inventario -->
<div class="row mb-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-collection"></i> Estado del Inventario
                </h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <div class="border-end">
                            <h3 class="text-primary">@Model.TotalLibrosInventario</h3>
                            <p class="text-muted mb-0">Total de Libros</p>
                        </div>
                    </div>
                    <div class="col-6">
                        <h3 class="text-success">$@Model.ValorTotalInventario.ToString("N2")</h3>
                        <p class="text-muted mb-0">Valor Total</p>
                    </div>
                </div>
                
                <div class="mt-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span>Stock Bajo (≤5 unidades)</span>
                        <span class="badge bg-warning">@Model.LibrosStockBajo</span>
                    </div>
                    <div class="progress" style="height: 8px;">
                        @{
                            var porcentajeStockBajo = Model.TotalLibrosInventario > 0 ?
                            (Model.LibrosStockBajo * 100m / Model.TotalLibrosInventario) : 0;

                        }
                        <div class="progress-bar bg-warning" style="width: @porcentajeStockBajo%"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-graph-up"></i> Rendimiento de Ventas
                </h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <div class="border-end">
                            <h3 class="text-info">@Model.CantidadLibrosVendidos</h3>
                            <p class="text-muted mb-0">Libros Vendidos Hoy</p>
                        </div>
                    </div>
                    <div class="col-6">
                        @{
                            var promedioVenta = Model.CantidadLibrosVendidos > 0 ? 
                                Model.TotalVentasDia / Model.CantidadLibrosVendidos : 0;
                        }
                        <h3 class="text-success">$@promedioVenta.ToString("N2")</h3>
                        <p class="text-muted mb-0">Promedio por Venta</p>
                    </div>
                </div>
                
                <div class="mt-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span>Meta de Ventas Diarias</span>
                        <span class="badge bg-info">$500.00</span>
                    </div>
                    @{
                        var porcentajeMeta = Model.TotalVentasDia / 500m * 100m;
                        var colorMeta = porcentajeMeta >= 100 ? "success" : 
                                      porcentajeMeta >= 75 ? "info" : 
                                      porcentajeMeta >= 50 ? "warning" : "danger";
                    }
                    <div class="progress" style="height: 8px;">
                        <div class="progress-bar bg-@colorMeta" style="width: @Math.Min(porcentajeMeta, 100)%"></div>
                    </div>
                    <small class="text-muted">@porcentajeMeta.ToString("N1")% de la meta diaria</small>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Libros Más Vendidos -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-trophy"></i> Top 10 - Libros Más Vendidos
                </h5>
            </div>
            <div class="card-body">
                @if (Model.LibrosMasVendidos.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>#</th>
                                    <th>Título</th>
                                    <th>Autor</th>
                                    <th>Cantidad Vendida</th>
                                    <th>Total Generado</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.LibrosMasVendidos.Count; i++)
                                {
                                    var libro = Model.LibrosMasVendidos[i];
                                    var posicion = i + 1;
                                    var badgeClass = posicion <= 3 ? "bg-warning" : "bg-secondary";
                                    
                                    <tr>
                                        <td>
                                            <span class="badge @badgeClass">@posicion</span>
                                        </td>
                                        <td><strong>@libro.Titulo</strong></td>
                                        <td>@libro.Autor</td>
                                        <td>
                                            <span class="badge bg-primary">@libro.CantidadVendida</span>
                                        </td>
                                        <td>
                                            <span class="text-success fw-bold">
                                                $@libro.TotalGenerado.ToString("N2")
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <div class="text-muted">
                            <i class="bi bi-inbox display-4"></i>
                            <p class="mt-2">No hay datos de ventas disponibles</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Enlaces de Navegación -->
<div class="row">
    <div class="col-12 text-center">
        <a asp-action="Dashboard" class="btn btn-primary btn-lg me-3">
            <i class="bi bi-bar-chart"></i> Dashboard Detallado
        </a>
        <a asp-action="StockBajo" class="btn btn-warning btn-lg me-3">
            <i class="bi bi-exclamation-triangle"></i> Ver Stock Bajo
        </a>
        <a asp-controller="Ventas" asp-action="Index" class="btn btn-success btn-lg">
            <i class="bi bi-cart"></i> Gestionar Ventas
        </a>
    </div>
</div>
