@model IEnumerable<BookShop.Web.Models.LibroViewModel>
@{
    ViewData["Title"] = "Stock Bajo";
}

<div class="row mb-3">
    <div class="col-12">
        <h2><i class="bi bi-exclamation-triangle text-warning"></i> Alertas de Stock Bajo</h2>
        <p class="lead">Libros que requieren reposición inmediata</p>
    </div>
</div>

<!-- Resumen de Alertas -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card bg-warning text-white">
            <div class="card-body text-center">
                <i class="bi bi-exclamation-triangle display-4"></i>
                <h4 class="card-title">Total de Alertas</h4>
                <h2 class="mb-0">@ViewBag.TotalLibrosStockBajo</h2>
                <small>Requieren atención</small>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card bg-danger text-white">
            <div class="card-body text-center">
                <i class="bi bi-0-circle display-4"></i>
                <h4 class="card-title">Sin Stock</h4>
                <h2 class="mb-0">@Model.Count(l => l.Stock == 0)</h2>
                <small>Stock agotado</small>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card bg-info text-white">
            <div class="card-body text-center">
                <i class="bi bi-1-circle display-4"></i>
                <h4 class="card-title">Stock Crítico</h4>
                <h2 class="mb-0">@Model.Count(l => l.Stock <= 2)</h2>
                <small>≤2 unidades</small>
            </div>
        </div>
    </div>
</div>

<!-- Configuración del Umbral -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card border-warning">
            <div class="card-header bg-warning text-dark">
                <h5 class="card-title mb-0">
                    <i class="bi bi-gear"></i> Configuración de Alertas
                </h5>
            </div>
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <p class="mb-0">
                            <strong>Umbral de Stock Bajo:</strong> 
                            <span class="badge bg-warning fs-6">@ViewBag.UmbralStock unidades</span>
                        </p>
                        <small class="text-muted">
                            Se mostrarán alertas cuando el stock esté por debajo de este valor
                        </small>
                    </div>
                    <div class="col-md-6 text-end">
                        <button class="btn btn-outline-warning" data-bs-toggle="modal" data-bs-target="#configModal">
                            <i class="bi bi-gear"></i> Configurar Umbral
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Lista de Libros con Stock Bajo -->
<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">
            <i class="bi bi-list-ul"></i> Libros con Stock Bajo
        </h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Portada</th>
                            <th>Título</th>
                            <th>Autor</th>
                            <th>Género</th>
                            <th>ISBN</th>
                            <th>Precio</th>
                            <th>Stock Actual</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderBy(l => l.Stock))
                        {
                            var stockClass = item.Stock == 0 ? "bg-danger" : 
                                           item.Stock <= 2 ? "bg-warning" : "bg-info";
                            var stockText = item.Stock == 0 ? "Agotado" : 
                                          item.Stock <= 2 ? "Crítico" : "Bajo";
                            
                            <tr class="@(item.Stock == 0 ? "table-danger" : "table-warning")">
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Portada))
                                    {
                                        <img src="@item.Portada" alt="Portada" class="img-thumbnail" style="max-width: 50px; max-height: 70px;" />
                                    }
                                    else
                                    {
                                        <div class="bg-light border rounded d-flex align-items-center justify-content-center" 
                                             style="width: 50px; height: 70px;">
                                            <i class="bi bi-book text-muted"></i>
                                        </div>
                                    }
                                </td>
                                <td>
                                    <strong>@item.Titulo</strong>
                                    @if (item.Stock == 0)
                                    {
                                        <span class="badge bg-danger ms-1">
                                            <i class="bi bi-x-circle"></i> Agotado
                                        </span>
                                    }
                                </td>
                                <td>@item.NombreAutor</td>
                                <td>@item.NombreGenero</td>
                                <td><code>@item.ISBN</code></td>
                                <td>
                                    <span class="text-success fw-bold">
                                        $@item.Precio.ToString("N2")
                                    </span>
                                </td>
                                <td>
                                    <span class="badge @stockClass fs-6">
                                        @item.Stock
                                    </span>
                                </td>
                                <td>
                                    <span class="badge @stockClass">
                                        @stockText
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-controller="Libros" asp-action="Edit" asp-route-id="@item.LibroID" 
                                           class="btn btn-sm btn-outline-primary" title="Editar Stock">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a href="@Url.Action("Create", "Ventas", new { libroId = item.LibroID })" 
                                           class="btn btn-sm btn-outline-success" title="Vender">
                                            <i class="bi bi-cart-plus"></i>
                                        </a>
                                        <button class="btn btn-sm btn-outline-info" title="Notificar Reposición"
                                                onclick="notificarReposicion(@item.LibroID, '@item.Titulo')">
                                            <i class="bi bi-bell"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <div class="text-success">
                    <i class="bi bi-check-circle display-4"></i>
                    <h4 class="mt-3">¡Excelente!</h4>
                    <p class="lead">No hay libros con stock bajo. El inventario está en buen estado.</p>
                </div>
            </div>
        }
    </div>
</div>

<!-- Enlaces de Navegación -->
<div class="row mt-4">
    <div class="col-12 text-center">
        <a asp-controller="Libros" asp-action="Index" class="btn btn-primary btn-lg me-3">
            <i class="bi bi-collection"></i> Ver Inventario Completo
        </a>
        <a asp-controller="Estadisticas" asp-action="Index" class="btn btn-info btn-lg me-3">
            <i class="bi bi-graph-up"></i> Panel de Estadísticas
        </a>
        <a asp-controller="Ventas" asp-action="Create" class="btn btn-success btn-lg">
            <i class="bi bi-cart-plus"></i> Registrar Venta
        </a>
    </div>
</div>

<!-- Modal de Configuración -->
<div class="modal fade" id="configModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="bi bi-gear"></i> Configurar Umbral de Stock
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">Umbral de Stock Bajo:</label>
                    <div class="input-group">
                        <input type="number" class="form-control" id="nuevoUmbral" 
                               value="@ViewBag.UmbralStock" min="1" max="50" />
                        <span class="input-group-text">unidades</span>
                    </div>
                    <div class="form-text">
                        Se mostrarán alertas cuando el stock esté por debajo de este valor
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-warning" onclick="guardarUmbral()">
                    <i class="bi bi-check-circle"></i> Guardar
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function notificarReposicion(libroId, titulo) {
            if (confirm(`¿Desea enviar una notificación de reposición para "${titulo}"?`)) {
                // Aquí se implementaría la lógica de notificación
                alert(`Notificación de reposición enviada para "${titulo}"`);
            }
        }

        function guardarUmbral() {
            var nuevoUmbral = document.getElementById('nuevoUmbral').value;
            if (nuevoUmbral > 0) {
                // Aquí se implementaría la lógica para guardar el umbral
                alert(`Umbral de stock configurado en ${nuevoUmbral} unidades`);
                $('#configModal').modal('hide');
                // Recargar la página para mostrar el nuevo umbral
                location.reload();
            } else {
                alert('Por favor ingrese un valor válido para el umbral');
            }
        }

        // Auto-refresh cada 5 minutos para mantener las alertas actualizadas
        setInterval(function() {
            // Solo recargar si hay alertas activas
            if (@ViewBag.TotalLibrosStockBajo > 0) {
                location.reload();
            }
        }, 300000); // 5 minutos
    </script>
}
