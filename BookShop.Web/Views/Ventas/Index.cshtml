@model IEnumerable<BookShop.Web.Models.VentaViewModel>
@{
    ViewData["Title"] = "Ventas";
}

<div class="row mb-3">
    <div class="col-md-6">
        <h2><i class="bi bi-cart"></i> Registro de Ventas</h2>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-cart-plus"></i> Nueva Venta
        </a>
    </div>
</div>

<!-- Filtro de Fecha -->
<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Seleccionar Fecha:</label>
                <input type="date" class="form-control" name="fecha" value="@ViewBag.FechaSeleccionada.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-4">
                <label class="form-label">&nbsp;</label>
                <div>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search"></i> Filtrar
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-calendar-day"></i> Hoy
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Resumen del Día -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card bg-primary text-white">
            <div class="card-body text-center">
                <h5 class="card-title">Ventas del Día</h5>
                <h3 class="mb-0">@ViewBag.CantidadVentas</h3>
                <small>@ViewBag.FechaSeleccionada.ToString("dd/MM/yyyy")</small>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-success text-white">
            <div class="card-body text-center">
                <h5 class="card-title">Total Generado</h5>
                <h3 class="mb-0">$@ViewBag.TotalVentas.ToString("N2")</h3>
                <small>Ingresos del día</small>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-info text-white">
            <div class="card-body text-center">
                <h5 class="card-title">Promedio por Venta</h5>
                <h3 class="mb-0">
                    @if (ViewBag.CantidadVentas > 0)
                    {
                        @($"${(ViewBag.TotalVentas / ViewBag.CantidadVentas):N2}")
                    }
                    else
                    {
                        @("$0.00")
                    }
                </h3>
                <small>Valor promedio</small>
            </div>
        </div>
    </div>
</div>

<!-- Lista de Ventas -->
<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">
            <i class="bi bi-list-ul"></i> Detalle de Ventas
        </h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Libro</th>
                            <th>Autor</th>
                            <th>Cantidad</th>
                            <th>Precio Unitario</th>
                            <th>Total</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@item.TituloLibro</strong>
                                </td>
                                <td>@item.NombreAutor</td>
                                <td>
                                    <span class="badge bg-primary fs-6">
                                        @item.Cantidad
                                    </span>
                                </td>
                                <td>
                                    <span class="text-success">
                                        $@item.PrecioUnitario.ToString("N2")
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-success fs-6">
                                        $@item.Total.ToString("N2")
                                    </span>
                                </td>
                                <td>
                                    <a href="@Url.Action("Create", "Ventas", new { libroId = item.LibroID })" 
                                       class="btn btn-sm btn-outline-success" title="Vender Más">
                                        <i class="bi bi-cart-plus"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <div class="text-muted">
                    <i class="bi bi-cart-x display-4"></i>
                    <h4 class="mt-3">No hay ventas registradas</h4>
                    <p class="lead">Para el día @ViewBag.FechaSeleccionada.ToString("dd/MM/yyyy") no se han registrado ventas.</p>
                    <a asp-action="Create" class="btn btn-success btn-lg">
                        <i class="bi bi-cart-plus"></i> Registrar Primera Venta
                    </a>
                </div>
            </div>
        }
    </div>
</div>

<!-- Enlaces de Navegación -->
<div class="row mt-4">
    <div class="col-12 text-center">
        <a asp-controller="Estadisticas" asp-action="Reporte" class="btn btn-outline-info me-2">
            <i class="bi bi-graph-up"></i> Ver Reporte Completo
        </a>
        <a asp-controller="Estadisticas" asp-action="Dashboard" class="btn btn-outline-primary">
            <i class="bi bi-bar-chart"></i> Dashboard de Estadísticas
        </a>
    </div>
</div>
